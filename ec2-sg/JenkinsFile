pipeline {
    agent { Label 'Jenkins-Agent'}

    environment {
        TF_VERSION = '1.7.3-dev' // Replace with your desired Terraform version
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: '*/main', credentialsId: 'github', url: 'https://github.com/dcolanderjr/pipeline_project'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    withAWS(["PATH+TERRAFORM=${tool 'Terraform'}"]) {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    withAWS(["PATH+TERRAFORM=${tool 'Terraform'}"]) {
                        sh 'terraform plan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                script {
                    withAWS(["PATH+TERRAFORM=${tool 'Terraform'}"]) {
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Terraform deployment succeeded!'
        }
        failure {
            echo 'Terraform deployment failed!'
        }
    }
}
